<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    tools:context="com.gj.weidumovie.MyCanBuyMovieActivity">

    <TextView
        android:id="@+id/my_can_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        android:text="电影名"/>
    <TextView
        android:id="@+id/my_can_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#b11450"
        android:layout_below="@+id/my_can_name"
        android:layout_marginTop="@dimen/dp_10"
        android:text="选择适合的影院"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_can_recycler"
        android:layout_width="match_parent"
        android:layout_below="@+id/my_can_one"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/my_can_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/detalisgroup"
        android:layout_alignParentBottom="true"
       android:layout_marginBottom="24dp"
        android:src="@drawable/ic_particulars_back" />
</RelativeLayout>

