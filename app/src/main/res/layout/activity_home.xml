<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gj.weidumovie.HomeActivity">

    <FrameLayout
        android:id="@+id/checkout_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

        <RadioGroup
            android:layout_alignParentBottom="true"
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_78"
            android:background="@drawable/select_show"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/checkout_radio_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/buttom_select"/>

            <RadioButton
                android:id="@+id/checkout_radio_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/buttom_select2"/>

            <RadioButton
                android:id="@+id/checkout_radio_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/buttom_select3"/>
        </RadioGroup>

</RelativeLayout>