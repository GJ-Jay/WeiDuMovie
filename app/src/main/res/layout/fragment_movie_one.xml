<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:background="@drawable/one_banner_bg">-->
            <!--定位+搜索框-->
            <include layout="@layout/top_include"/>

            <!--</RelativeLayout>-->

            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/one_banner_flow"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="-101dp"
                android:layout_height="@dimen/dp_223" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20">
                    <!--热门电影-->
                    <TextView
                        android:id="@+id/home_hot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="热门电影"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/textcolor" />
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_4"
                        android:background="#e8175e"
                        android:layout_below="@+id/home_hot"/>
                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/home_next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_hot_rlv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24">
                    <!--正在热映-->
                    <TextView
                        android:id="@+id/home_being"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="正在热映"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/textcolor" />
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_4"
                        android:background="#e8175e"
                        android:layout_below="@+id/home_being"/>
                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/home_next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_being_rlv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_24">
                    <!--即将上映-->
                    <TextView
                        android:id="@+id/home_about_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="即将上映"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/textcolor" />
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_4"
                        android:background="#e8175e"
                        android:layout_below="@+id/home_about_show"/>
                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/home_next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_about_show_rlv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>