<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_186"
        android:background="@drawable/one_banner_bg">

        <TextView
            android:id="@+id/one_image_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:drawableLeft="@drawable/one_address_img"
            android:text="北京"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/one_search_img"
            android:background="@drawable/search_shape_bg"
            android:layout_marginTop="@dimen/dp_40"
            android:padding="@dimen/dp_10"/>
    </RelativeLayout>
</RelativeLayout>