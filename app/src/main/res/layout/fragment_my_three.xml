<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_user_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mine_remind"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@drawable/my_icon_remind_default_hdpi" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mine_head"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            fresco:placeholderImage="@drawable/ic_head"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/mine_login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_7"
            android:text="登录/注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/sigin_in"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/btn2_btn_bg"
            android:text="签到"
            android:layout_marginTop="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/dp_20"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/mine_back"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_10"
            android:id="@+id/btn_msg_mine"
            android:paddingBottom="@dimen/dp_10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mine_my_info"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_messiage_default_hdpi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/mine_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_10"
            android:id="@+id/btn_like_mine"
            android:paddingBottom="@dimen/dp_10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mine_my_attention"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_attention_default_hdpi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:id="@+id/btn_buy_mine"
            android:paddingBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_my_buy_record"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_rccord_default_hdpi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/mine_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_feedback_mine"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mine_my_idea"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_feedback_default_hdpi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:id="@+id/btn_version_mine"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_my_new"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_version_default_hdpi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="最新版本"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:id="@+id/btn_back_mine"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_my_back"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_logout_default" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
