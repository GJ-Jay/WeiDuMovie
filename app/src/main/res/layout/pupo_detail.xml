<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"

   >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="580dp">

            <TextView
                android:id="@+id/tv_pop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_170"
                android:gravity="center"
                android:text="无双"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:padding="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/popu_type">

                <LinearLayout
                    android:id="@+id/linear_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型:" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爱情/戏剧" />

                        <ImageView
                            android:id="@+id/pupo_xq_back"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:src="@drawable/ic_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导演:" />

                        <TextView
                            android:id="@+id/tv_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爱情/戏剧" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时长:" />

                        <TextView
                            android:id="@+id/tv_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爱情/戏剧" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产地:" />

                        <TextView
                            android:id="@+id/tv_placeoforigin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="爱情/戏剧" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linear_one"

                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="剧情简介"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_jianjie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="演职人员"
                        android:textSize="@dimen/dp_16" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16">

                        <Button
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_32"
                            android:background="@drawable/movie_details_show"
                            android:gravity="center"
                            android:text="演员名字"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12" />

                        <Button
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_32"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/movie_details_show"
                            android:text="饰演角色"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_performer01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="洛厄尼*或布洛克" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="饰" />

                            <TextView
                                android:id="@+id/tv_role01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="慕容云海" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <TextView
                                android:id="@+id/tv_performer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="洛厄尼*或布洛克" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="饰" />

                            <TextView
                                android:id="@+id/tv_role02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/dp_213"
                                android:text="慕容云海" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simp_pop_movie"
                android:layout_width="@dimen/dp_111"
                android:layout_height="@dimen/dp_149"
                android:layout_marginLeft="@dimen/dp_20"/>
        </RelativeLayout>

</RelativeLayout>
